{
  "*.json": ["yarn eslint --fix", "yarn prettier --write"],
  "*.svg": ["yarn prettier --parser html --write"],
  "*.{css,md,yaml,yml}": ["yarn prettier --write"],
  "*.{js,jsx,ts,tsx}": [
    "yarn prettier --write",
    "yarn eslint --max-warnings 0 --fix",
    "yarn stylelint"
  ],
  "package.json": [
    "yarn eslint --fix",
    "yarn prettier --write",
    "yarn npmPkgJsonLint"
  ]
}
