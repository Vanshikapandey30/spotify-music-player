{
  "extends": "@spotify/tsconfig",
  "include": ["src", "typings"],
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "skipLibCheck": true
  }
}
